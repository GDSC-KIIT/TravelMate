<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@drawable/cat_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image_holder"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:adjustViewBounds="true"
            android:src="@drawable/img"
            app:shapeAppearanceOverlay="@style/roundedimageview"></com.google.android.material.imageview.ShapeableImageView>

        <LinearLayout
            android:id="@+id/ll22"
            android:layout_below="@id/image_holder"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textholder1"
                android:text="Tokyo,Tokyo"
                android:fontFamily="@font/poppins"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="30sp"/>
            <ImageView
                android:layout_marginLeft="220dp"
                android:src="@drawable/baseline_more_vert_24"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="19dp"
            android:background="@drawable/cat_back"
            android:layout_alignParentRight="true"
            android:src="@drawable/baseline_bookmark_border_24" />
        <LinearLayout
            android:layout_below="@id/ll22"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                app:shapeAppearanceOverlay="@style/roundedimageview2"
                android:src="@drawable/japan" />
            <TextView
                android:id="@+id/textholder2"
                android:layout_width="wrap_content"
                android:layout_height="30sp"
                android:fontFamily="@font/poppins"
                android:text="Japan"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>