<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_login.xml"
    app:startDestination="@id/firstFragment">

    <fragment
        android:id="@+id/firstFragment"
        android:name="com.example.travelmate.FirstFragment"
        android:label="FirstFragment"
        tools:layout="@layout/fragment_first">
        <action
            android:id="@+id/action_firstFragment2_to_signUpFragment2"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_firstFragment2_to_loginFragment2"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.travelmate.SignUpFragment"
        android:label="SignUpFragment"
        tools:layout="@layout/fragment_sign_up">
        <action
            android:id="@+id/action_signUpFragment2_to_OTPFragment2"
            app:destination="@id/OTPFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.travelmate.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment2_to_forgotpwdFragment2"
            app:destination="@id/forgotpwdFragment" />
    </fragment>
    <fragment
        android:id="@+id/forgotpwdFragment"
        android:name="com.example.travelmate.ForgotpwdFragment"
        android:label="ForgotpwdFragment"
        tools:layout="@layout/fragment_forgotpwd">
        <action
            android:id="@+id/action_forgotpwdFragment2_to_resetpwdFragment2"
            app:destination="@id/resetpwdFragment" />
    </fragment>
    <fragment
        android:id="@+id/resetpwdFragment"
        android:name="com.example.travelmate.ResetpwdFragment"
        android:label="ResetpwdFragment"
        tools:layout="@layout/fragment_resetpwd">
        <action
            android:id="@+id/action_resetpwdFragment2_to_loginFragment22"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/OTPFragment"
        android:name="com.example.travelmate.OTPFragment"
        android:label="OTPFragment"
        tools:layout="@layout/fragment_o_t_p">
        <action
            android:id="@+id/action_OTPFragment2_to_loginFragment2"
            app:destination="@id/loginFragment" />
    </fragment>
</navigation>